<!DOCTYPE html>
<html lang="es">

<%- include("../partials/head") %>


    <body class="home-body">
        <%- include("../partials/header") %>
            <main class="home-main">

                <div id="carouselExample" class="carousel slide">
                    <div class="carousel-inner">
                        <div class="carousel-item active">
                            <img src="/images/mujer-limpiando.png" class="d-block w-100" alt="...">
                        </div>
                        <div class="carousel-item">
                            <img src="/images/mujer-limpiando.png" class="d-block w-100" alt="...">
                        </div>
                        <div class="carousel-item">
                            <img src="/images/mujer-limpiando.png" class="d-block w-100" alt="...">
                        </div>
                    </div>
                    <button class="carousel-control-prev" type="button" data-bs-target="#carouselExample"
                        data-bs-slide="prev">
                        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                        <span class="visually-hidden">Previous</span>
                    </button>
                    <button class="carousel-control-next" type="button" data-bs-target="#carouselExample"
                        data-bs-slide="next">
                        <span class="carousel-control-next-icon" aria-hidden="true"></span>
                        <span class="visually-hidden">Next</span>
                    </button>
                </div>

                <div class="div-anuncios">
                    <div class="img-tip"> <img src="/images/tips.png" alt="Tips"></div>
                    <div class="caja-gris"></div>

                </div>

                <div class="div-offers">
                    <h5>Â¡OFERTAS DE LA SEMANA DE LA LIMPIEZA!</h5>
                </div>
                <section class="section-products">
                    <% productos.forEach(producto=> { %>
                        <div class="clean-product">
                            <img src="./images/<%= producto.imagen%>" alt="Article">
                            <div>
                                <a href="productos/detalle/<%= producto.id%>">
                                    <h5>
                                        <%= producto.nombre%>
                                    </h5>
                                </a>
                                <p>
                                    <%= producto.descripcion%>
                                </p>
                                <h4> $<%= producto.precio%>
                                </h4>
                            </div>
                        </div>
                        <% }) %>
                </section>
            </main>

            <%- include("../partials/footer") %>
                <%- include("../partials/scripts") %> 
    </body>

</html>