<!DOCTYPE html>
<html lang="en">
<%- include("../partials/head", { title: `${user.name} ${user.surname}` }) %>
<body class="dashboard-body">
  <%- include("./navBar") %>
  <main class="admin-main-list">

    <div class="admin-header-list">
      <div class="admin-header-list-title">
        <h2>Detalle de usuario</h2>
      </div>
    </div>

    <div class="admin-user-details">
      <h3>Información Personal</h3>
      <div  id="admin-user-info">
      
      <form class="row g-3" action="/admin/dashboard/usuarios/<%= user.id %>?_method=PUT" method="POST" >

        <div class="col-md-6">
            <label for="floatingEmptyPlaintextInput">Nombre</label>
            <input type="text" readonly class="form-control" id="floatingEmptyPlaintextInput"  value="<%= user.name %>" disabled>
        </div>

        <div class="col-md-6">
          <label for="floatingPlaintextInput">Apellido</label>
          <input type="text" readonly class="form-control" id="floatingPlaintextInput"  value="<%= user.surname %>" disabled>
        </div>

        <div class="col-12">
          <label for="floatingPlaintextInput">Email</label>
          <input type="text" readonly class="form-control" id="floatingPlaintextInput" value="<%= user.email %>" disabled>           
        </div>

        <div class="col-12">
          <label for="floatingPlaintextInput">DNI</label>
          <input type="text" readonly class="form-control" id="floatingPlaintextInput"  value="<%= user.dni %>" disabled>        
        </div>

        <div class="col-md-6">
          <label for="floatingPlaintextInput">Teléfono</label>
          <input type="text" readonly class="form-control" id="floatingPlaintextInput"  value="<%= user.phoneNumber %>" disabled>
        </div>

        <div class="col-md-6">
          <label for="inputState" class="">Rol</label>
          <select id="inputState" class="form-select" name="role">
            <option selected> <%= user.role ? user.role.name : "Sin rol asignado" %></option>
             <% roles.forEach( r=> { %>

              <% if(r.name !== user.role.name) {  %>

              <option value="<%= r.id %>"> <%= r.name %> </option>

              <% } %>

              <% }) %>
          </select>
        </div>
        
      <button type="submit">Guardar cambios

      </button>
      </form>

      
      <div>
      <img src="/images/users/<%= user.avatar %>" width="400px">
      </div>

    </div>


      <h3>Dirección asociada</h3>

      <div class="container-admin-user-address">
      <div class="admin-user-address">
       
        <% if (user.address) { %>
          <p><strong>Calle:</strong> <%= user.address.street %> <%= user.address.streetNo %></p>
          <p><strong>Ciudad:</strong> <%= user.address.city %></p>
          <p><strong>Provincia:</strong> <%= user.address.province %></p>
          <p><strong>Código Postal:</strong> <%= user.address.zipCode %></p>
          <p><strong>País:</strong> <%= user.address.country %></p>
        <% } else { %>
          <p>Sin dirección asignada</p>
        <% } %>
      </div>
    </div>
    </div>

  </main>
  <% if(typeof message !== "undefined") {  %>

    <svg xmlns="http://www.w3.org/2000/svg" class="d-none">
      <symbol id="check-circle-fill" viewBox="0 0 16 16">
        <path d="M16 8A8 8 0 1 1 0 8a8 8 0 0 1 16 0zm-3.97-3.03a.75.75 0 0 0-1.08.022L7.477 9.417 5.384 7.323a.75.75 0 0 0-1.06 1.06L6.97 11.03a.75.75 0 0 0 1.079-.02l3.992-4.99a.75.75 0 0 0-.01-1.05z"/>
      </symbol>
      <symbol id="info-fill" viewBox="0 0 16 16">
        <path d="M8 16A8 8 0 1 0 8 0a8 8 0 0 0 0 16zm.93-9.412-1 4.705c-.07.34.029.533.304.533.194 0 .487-.07.686-.246l-.088.416c-.287.346-.92.598-1.465.598-.703 0-1.002-.422-.808-1.319l.738-3.468c.064-.293.006-.399-.287-.47l-.451-.081.082-.381 2.29-.287zM8 5.5a1 1 0 1 1 0-2 1 1 0 0 1 0 2z"/>
      </symbol>
      <symbol id="exclamation-triangle-fill" viewBox="0 0 16 16">
        <path d="M8.982 1.566a1.13 1.13 0 0 0-1.96 0L.165 13.233c-.457.778.091 1.767.98 1.767h13.713c.889 0 1.438-.99.98-1.767L8.982 1.566zM8 5c.535 0 .954.462.9.995l-.35 3.507a.552.552 0 0 1-1.1 0L7.1 5.995A.905.905 0 0 1 8 5zm.002 6a1 1 0 1 1 0 2 1 1 0 0 1 0-2z"/>
      </symbol>
    </svg>

    <div id="liveAlertPlaceholder">
      <div class="alert alert-success alert-dismissible" id="admin-alert" role="alert">   
           <div> <!-- <svg class="bi flex-shrink-0 me-2" role="img" aria-label="Success:" width="30px"><use xlink:href="#check-circle-fill"/></svg>  --><%=message%></div>
           <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    </div>
   

    </div>
    <% } %>

  <%- include("../partials/scripts") %>
</body>
</html>